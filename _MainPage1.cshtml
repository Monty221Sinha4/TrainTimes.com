                <li class="nav-item active">
                    @Html.ActionLink("Home","Index","Home")
                </li>
                <li class="nav-item">
                    @Html.ActionLink("AboutUS","AboutUs","Home")
                </li>
                <li class="nav-item">
                    @Html.ActionLink("ContactUs","Contact","Home")
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
            </ul>
        </div>
    </nav>
            <div>
                @RenderBody()
            </div>
